<header>
    <div class="header-wrapper">
        <h1>SimpleBlogPlatform</h1>
    </div>
</header>

<nav>
    <div class="nav-wrapper">
        <ul class="menu">
            <li><a href="#">home</a></li>
            <li><%= link_to 'all', controller: 'posts' %></li>
            <li><%= link_to 'submit', new_post_path %></li>
        </ul>
    </div>
</nav>

<% @posts.each do |post| %>
    <article>
        <div class="article-wrapper">
            <h2><%= post.title %></h2>
            <p><%= post.text %></p>
            <p><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></p>
        </div>
    </article>
<% end %>
