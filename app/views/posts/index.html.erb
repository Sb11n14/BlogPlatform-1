<% @posts.each do |post| %>
    <article>
        <div class="article-wrapper">
            <h2><%= post.title %></h2>
            <p><%= post.text %></p>
            <p><%= link_to 'Edit', edit_post_path(post) %></p>
            <p><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></p>
        </div>
    </article>
<% end %>
