<!DOCTYPE html>
<html>
<head>
  <title>BlogPlatform</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <header>
        <div class="header-wrapper">
            <h1>SimpleBlogPlatform</h1>
        </div>
    </header>

    <nav>
        <div class="nav-wrapper">
            <ul class="menu">
                <li><%= link_to 'home', home_index_path %></li>
                <li><%= link_to 'all', controller: 'posts' %></li>
                <li><%= link_to 'submit', new_post_path %></li>
            </ul>
        </div>
    </nav>

<%= yield %>

</body>
</html>
