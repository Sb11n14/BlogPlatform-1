<!DOCTYPE html>
<html>
<head>
  <title>BlogPlatform</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <header>
        <div class="header-wrapper">
            <h1>SimpleBlogPlatform</h1>
        </div>
    </header>

    <nav>
        <div class="nav-wrapper">
            <ul class="menu">
                <li><%= link_to 'home', home_index_path %></li>
                <li><%= link_to 'all', controller: 'posts' %></li>
                <li><%= link_to 'submit', new_post_path %></li>
            </ul>
        </div>
    </nav>

    <%= form_tag(posts_path, :method => "get", class: "navbar-form", id: "search-form") do %>
        <div class="input-append">
          <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
          <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
               of using a Rails form helper -->
          <button class="btn" type="submit"><i class="icon-search"></i></button>
        </div>
    <% end %>

<%= yield %>

</body>
</html>
